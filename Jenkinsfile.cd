pipeline {
    agent any

    environment {
        NODE_ENV = 'production'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo 'ğŸ“¥ Checking out code...'
                git branch: 'main', url: 'https://github.com/Harshitha-J-S/queuePrint.git'
            }
        }

       stage('Build Frontend') {
         steps {
            echo 'ğŸ› ï¸ Installing and building frontend...'
            dir('frontend') {
               bat 'npm install'
                bat 'npx vite build'
    }
  }
}

        stage('Deploy Infrastructure') {
            steps {
                echo 'ğŸš€ Deploying infrastructure with Terraform...'
                dir('infra') {
                    bat 'terraform init'
                    bat 'terraform apply -auto-approve'
                }
            }
        }

        stage('Start Backend') {
            steps {
                echo 'ğŸ§© Starting backend server...'
                dir('backend') {
                    bat 'npm install'
                    bat 'node server.js'
                }
            }
        }
    }

    post {
        always {
            echo 'ğŸ“¦ CD pipeline finished.'
