pipeline {
    agent any

    environment {
        NODE_ENV = 'production'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo '📥 Checking out code...'
                git url: 'https://github.com/Harshitha-J-S/queuePrint.git', branch: 'main'
            }
        }

        stage('Build Frontend') {
            steps {
                echo '🛠️ Installing and building frontend...'
                dir('frontend') {
                    bat 'npm install'

                    // Fallback: Ensure vite is installed if not present
                    bat 'if not exist node_modules\\vite npm install vite --save-dev'

                    // Now build
                    bat 'npx vite build'
                }
            }
        }

        stage('Deploy Infrastructure') {
            steps {
                echo '🚀 Deploying Terraform infrastructure...'
                dir('terraform') {
                    bat 'terraform init'
                    bat 'terraform apply -auto-approve'
                }
            }
        }

        stage('Start Backend') {
            steps {
                echo '🖥️ Starting backend server...'
                dir('backend') {
                    bat 'npm install'
                    bat 'node server.js'
                }
            }
        }
    }

    post {
        always {
            echo '📦 CD pipeline finished.'
        }
        failure {
            echo '❌ Deployment failed.'
        }
    }
}
